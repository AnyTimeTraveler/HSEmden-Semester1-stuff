% print the document major title: large and centered
\newcommand{\PrintTitle}[1]{
    \begin{center}
    \textbf{{\Large \rmfamily #1}}
    \vspace{0.4cm}
    \end{center} }

% enable custom header and footer
\pagestyle{fancy}

